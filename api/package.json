{
    "name": "servicereports-be",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest --watchAll --runInBand --detectOpenHandles",
        "test-git": "cross-env NODE_ENV=github_actions jest --runInBand --detectOpenHandles --coverage=true",
        "lint": "eslint . --fix",
        "mgr-make": "knex migrate:make",
        "mgr-rol": "knex migrate:rollback",
        "mgr-lat": "knex migrate:latest",
        "seed-test": "cross-env NODE_ENV=test cross-env NODE_ENV=test npm run seed-psql",
        "seed-psql": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
        "prepare-husky": "cd .. && husky install api/.husky"
    },
    "author": "DuoDinamico",
    "license": "ISC",
    "dependencies": {
        "@hapi/boom": "^9.1.4",
        "celebrate": "^15.0.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "helmet": "^5.0.2",
        "knex": "^1.0.1",
        "nodemon": "^2.0.15",
        "pg": "^8.7.1",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.7.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "jest-sorted": "^1.0.14",
        "lint-staged": "^12.3.3",
        "prettier": "^2.5.1",
        "supertest": "^6.2.1"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,yml,md}": [
            "prettier --write"
        ]
    },
    "jest": {
        "coverageProvider": "v8",
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/db/**",
            "!**/docs/**",
            "!**/errors/**",
            "!**/schemas/**",
            "!**/coverage/**",
            "!*.js"
        ],
        "verbose": true,
        "setupFilesAfterEnv": [
            "jest-sorted"
        ]
    }
}
